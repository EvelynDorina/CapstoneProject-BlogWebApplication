<head>
    <link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  integrity="sha512-dyDgz7Zg5PHfUPu59f8Jpr5my7NNHlaQVjHXghQt5xPZ+taJRwZv1/gjV9TA1n6Mp55a9RcsFtDtvM11RAY+Kw=="
  crossorigin="anonymous"
/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<section class="blog-content container is-widescreen">
    
<div class="card-all">
    <% array.forEach(posts => { %>
   <div class="card">
           
        <div class="card-header">
            <div class="card-header-title">
                <h3><%= posts.title %></h3>
            </div>
             <div class="dropdown is-hoverable is-right">
            <div class="dropdown-trigger">
                <button class="button" aria-haspopup="true" aria-controls="dropdown-menu" onclick="toggleDropdown(this)">
                    <!-- <span>Options</span> -->
                    <span class="icon is-small">
                        <i class="fas fa-angle-down" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
            <div class="dropdown-menu" id="dropdown-menu" role="menu">
                <div class="dropdown-content">
                    <a href="/update/<%= posts.id %>" method="post">
                        <button class="dropdown-item">Edit</button>
                    </a>
                    <form action="/delete/<%= posts.id %>" method="post">
                    <button class="dropdown-item" onclick="">Delete</button>    
                    </form>
                    
                </div>
            </div>
        </div>
        </div>
            <div class="card-content">
            <p><%= posts.content %></p>
            <a class="button" href="/blog-detail/<%= posts.id %>">Read more</a>
            </div>
  </div>
   
</div>  
    <% }) %>
        
</div>
<script>
    function toggleDropdown(button) {
    const dropdownMenu = button.closest('.dropdown').querySelector('.dropdown-menu');
    dropdownMenu.classList.toggle('is-active');
}
</script>
</section>
